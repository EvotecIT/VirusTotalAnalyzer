# VirusTotal Domain Monitor - Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# VIRUSTOTAL API CONFIGURATION
# ==========================================
# Get your API key from: https://www.virustotal.com/gui/user/YOUR_USERNAME/apikey
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# ==========================================
# SMTP EMAIL CONFIGURATION
# ==========================================
# SMTP server hostname (e.g., smtp.gmail.com, smtp.office365.com)
SMTP_SERVER=smtp.example.com

# SMTP port (common: 587 for TLS, 465 for SSL, 25 for unencrypted)
SMTP_PORT=587

# SMTP authentication credentials
SMTP_USERNAME=monitoring@example.com
SMTP_PASSWORD=your_smtp_password_here

# Email addresses
SMTP_FROM=monitoring@example.com

# Multiple recipients separated by commas
SMTP_TO=admin@example.com,security@example.com

# CC recipients (optional, comma-separated)
SMTP_CC=

# Use SSL/TLS encryption (true/false)
SMTP_USE_SSL=true

# ==========================================
# DETECTION THRESHOLDS
# ==========================================
# Number of malicious detections before triggering alert (0 = any malicious detection)
THRESHOLD_MALICIOUS=0

# Number of suspicious detections before triggering alert
THRESHOLD_SUSPICIOUS=3

# Minimum reputation score (alert if below this value, typically -100 to +100)
THRESHOLD_MIN_REPUTATION=-10

# ==========================================
# API RATE LIMITING
# ==========================================
# Delay in milliseconds between API requests
# Free tier: 4 requests/min = 15000ms recommended
# Premium tier: Can reduce to 100-1000ms
RATE_LIMIT_DELAY_MS=15000

# ==========================================
# GENERAL CONFIGURATION
# ==========================================
# Timezone (e.g., UTC, America/New_York, Europe/London)
TZ=UTC
